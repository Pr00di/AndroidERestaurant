<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:rotationX="0"
    android:visibility="visible"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="520dp"
        android:layout_height="800dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_v3" />

    <TextView
        android:id="@+id/Titre_resto"
        android:layout_width="330dp"
        android:layout_height="54dp"
        android:layout_marginTop="104dp"
        android:fontFamily="casual"
        android:text="Bienvenue chez Toto"
        android:textAppearance="@android:style/TextAppearance.Holo"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Entree"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="292dp"
        android:fontFamily="serif"
        android:onClick="ClickON"
        android:text="Entrees"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Plat"
        android:layout_width="105dp"
        android:layout_height="50dp"
        android:layout_marginTop="412dp"
        android:fontFamily="serif"
        android:onClick="ClickON"
        android:text="Plats"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Desserts"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="540dp"
        android:fontFamily="serif"
        android:onClick="ClickON"
        android:text="Desserts"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>